<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEditTransactionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Transaction"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:background="@color/light_green"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@color/light_green"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <!-- Account selection -->
        <Spinner
            android:id="@+id/spinnerAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/light_green"
            android:minHeight="48dp" />

        <!-- Category selection -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/light_green"
            android:minHeight="48dp" />

        <!-- Date Picker -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Date"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:backgroundTint="@color/light_green"
            android:textColor="@color/black"/>

        <!-- Recurring CheckBox -->
        <CheckBox
            android:id="@+id/cbRecurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurring"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Receipt Placeholder -->
            <Button
                android:id="@+id/btnAttachReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach Receipt"
                android:backgroundTint="@color/accent_green"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>

            <!-- Receipt Placeholder -->
            <Button
                android:id="@+id/btnViewReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Receipt"
                android:backgroundTint="@color/accent_green"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>

        </LinearLayout>

        <!-- Save / Cancel -->
        <Button
            android:id="@+id/btnSaveTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/accent_green"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/red"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>